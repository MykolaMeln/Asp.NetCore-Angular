@model IEnumerable<Project.DAL.Entities.Prohram>
@{
    ViewBag.Title = "List of Prohrams";
}

<a asp-action="Create">Add prohram</a>

<table class="table">
    <tr><th>RadioId</th><th>NameProgram</th><th>Period</th><th>Hour_begin</th><th>Hour_end</th><th></th></tr>
    @foreach (var prohram in Model)
    {
<tr>
    <td>@prohram.radioid</td>
    <td>@prohram.Name_program</td>
    <td>@prohram.Period</td>
    <td>@prohram.Hour_begin</td>
    <td>@prohram.Hour_end</td>
    <td>
        <form asp-action="Delete" asp-route-id="@prohram.ProgramId" method="post">
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@prohram.ProgramId">Edit</a>
            <button type="submit" class="btn btn-sm btn-danger">
                Delete
            </button>
        </form>
    </td>
</tr>
    }
</table>

