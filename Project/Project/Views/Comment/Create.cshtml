
@model Project.Models.CreateCommentViewModel
@{
    ViewBag.Title = "Create comment";
}
    <form asp-action="Create" asp-controller="Comment">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="userid" class="control-label">UserId</label>
            <input type="number" asp-for="userid" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="username" class="control-label">UserName</label>
            <input type="text" asp-for="username" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="comment" class="control-label">Comment</label>
            <input type="text" asp-for="comment" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="date" class="control-label">date</label>
            <input type="datetime" asp-for="date" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </form>
