
@model Project.Models.CreateRadioViewModel
@{
    ViewBag.Title = "Create radio";
}
<form asp-action="Create" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Frequency" class="control-label">Frequency</label>
        <input type="number" asp-for="Frequency" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Rating" class="control-label">Rating</label>
        <input type="number" asp-for="Rating" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-default" />
    </div>
</form>
