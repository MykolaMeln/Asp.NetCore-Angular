@model IEnumerable<Project.DAL.Entities.Radio>
@{
    ViewBag.Title = "List of Stations";
}

<a asp-action="Create">Add radio</a>

<table class="table">
    <tr><th>NameStation</th><th>Frequency</th><th>Rating</th><th></th></tr>
    @foreach (var radio in Model)
    {
        <tr>
            <td>@radio.Name</td>
            <td>@radio.Frequency</td>
            <td>@radio.Rating</td>
            <td>
                <form asp-action="Delete" asp-route-id="@radio.RadioId" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@radio.RadioId">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>


